# go
export GOPATH=$HOME

# nodejs
export NVM_DIR=$HOME/.nvm

# editor
export VISUAL=nvim
export EDITOR=nvim

# add custom bin directories to path
export PATH=$PATH:~/.bin
export PATH=$PATH:$GOPATH/bin

# shell history
export HISTFILE=~/.histfile
export HISTSIZE=1000
export SAVEHIST=1000

# ui
export TERM=xterm-256color
